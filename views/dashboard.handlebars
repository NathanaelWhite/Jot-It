<header>
  <h1>Dashboard</h1>
</header>
<div class="notes">

  <section class="indent-1">
    <!-- Section 1 -->

    <section id="note-title">
      <div class="list-group-item">
        <a
          href="#"
          class="list-group-item list-group-item-action list-group-horizontal-xl"
        ><i class="fas fa-search" id="search"></i><input
            type="text"
            id="myInput"
            onkeyup="myFunction()"
            placeholder="Search"
          /></a>

        <ul id="myUL">
          {{#each posts as |post|}}
          <li>
            <a
              href="/dashboard/edit/{{post.id}}"
              class="list-group-item list-group-item-action list-group-horizontal-xl"
            >{{ post.title }}<i class="fas fa-pen" id="edit-note"></i><i class="fas fa-share-alt" id="share"></i><i
                class="far fa-minus-square"
                id="delete-note"
              ></i></a>
          </li>
         {{/each}}
          {{!-- <li>
            <a
              href="#"
              class="list-group-item list-group-item-action list-group-horizontal-xl"
            >test<i class="fas fa-pen" id="edit-note"></i><i class="fas fa-share-alt" id="share"></i><i
                class="far fa-minus-square"
                id="delete-note"
              ></i></a>
          </li>
          <li>
            <a
              href="#"
              class="list-group-item list-group-item-action list-group-horizontal-xl"
            >sample 3<i class="fas fa-pen" id="edit-note"></i><i class="fas fa-share-alt" id="share"></i><i
                class="far fa-minus-square"
                id="delete-note"
              ></i></a>
          </li> --}}
        </ul>
      </div>

    </section>

    <!-- Section 2 -->
    <section id="create">
      <div class="col-sm">
        <div class="card" style="width: 42rem; opacity: 95%">
          <div class="card-body" id="your-notes">
            <div class="mb-3">
              <label for="post-title" class="form-label">Create a
                New Note</label>
              <input
                type="text"
                class="form-control"
                id="post-title"
                name="post-title"
                placeholder="Title"
              />
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm">
        <div class="card" style="width: 42rem; opacity: 95%">
          <div class="card-body">
            <div class="mb-3">
              <label
                for="post-text"
                class="form-label"
              ></label>
              <div class="sample-toolbar">
                <a href="javascript:void(0)" onclick="format('bold')"><span
                    class="fa fa-bold fa-fw"
                  ></span></a>
                <a href="javascript:void(0)" onclick="format('italic')"><span
                    class="fa fa-italic fa-fw"
                  ></span></a>
                <a
                  href="javascript:void(0)"
                  onclick="format('insertunorderedlist')"
                ><span class="fa fa-list fa-fw"></span></a>
              </div>

              <div class="editor" id="sampleeditor">
                
              </div>
            </div>
            <button class="save-btn" id="save-note">Save</button>
          </div>
        </div>
      </div>
    </section>
  {{!-- </section>
</div> --}}
<script src="/javascript/dashboard.js"></script>
<script src="/javascript/edit-post.js"></script>
